@model SettingViewModel
@{
    ViewData["Title"] = Resource.Settings;
}
@section breadcrumb{
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">@Resource.Home</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Settings")">@Resource.Settings</a></li>
}
<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressEn" class="control-label"></label>
                <textarea asp-for="AddressEn" class="form-control"></textarea>
                <span asp-validation-for="AddressEn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Twitter" class="control-label"></label>
                <input placeholder="@Resource.Account" asp-for="Twitter" class="form-control" />
                <span asp-validation-for="Twitter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facebook" class="control-label"></label>
                <input placeholder="@Resource.Account" asp-for="Facebook" class="form-control" />
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instagram" class="control-label"></label>
                <input placeholder="@Resource.Account" asp-for="Instagram" class="form-control" />
                <span asp-validation-for="Instagram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Whatsapp" class="control-label"></label>
                <input placeholder="@Resource.Example: 9665XXXXXXXX" asp-for="Whatsapp" class="form-control" />
                <span asp-validation-for="Whatsapp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Youtube" class="control-label"></label>
                <input placeholder="@Resource.Channel_Link" asp-for="Youtube" class="form-control" />
                <span asp-validation-for="Youtube" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Snapchat" class="control-label"></label>
                <input placeholder="@Resource.Account" asp-for="Snapchat" class="form-control" />
                <span asp-validation-for="Snapchat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Linkedin" class="control-label"></label>
                <input placeholder="@Resource.Account" asp-for="Linkedin" class="form-control" />
                <span asp-validation-for="Linkedin" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Map" class="control-label"></label>
                <textarea asp-for="Map" class="form-control"></textarea>
                <span asp-validation-for="Map" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resource.Save" class="btn btn-primary" />
                <input type="submit" value="@Resource.Cancel" class="btn btn-light" />
            </div>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Map');
    </script>
}
