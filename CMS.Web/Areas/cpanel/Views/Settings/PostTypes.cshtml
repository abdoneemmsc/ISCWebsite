@model PostTypeSettingsViewModel
@{
    ViewData["Title"] = Resource.PostTypes;
    var lang = ViewBag.Lang;
}
@section breadcrumb{
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">@Resource.Home</a></li>
}
<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <form asp-action="PostTypes" class="col-md-10">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @for (int i = 0; i < Model.PostTypes?.Count(); i++)
        {
            <h3>@(lang=="en"? Model.PostTypes[i].NameEn: Model.PostTypes[i].Name)</h3>
            <input type="hidden" asp-for="PostTypes[i].Id" />
            <input type="hidden" asp-for="PostTypes[i].Name" />
            <input type="hidden" asp-for="PostTypes[i].NameEn" />
            <div class="form-group">
                <label asp-for="PostTypes[i].Description" class="control-label"></label>
                <textarea asp-for="PostTypes[i].Description" class="form-control w-100"></textarea>
                <span asp-validation-for="PostTypes[i].Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostTypes[i].DescriptionEn" class="control-label"></label>
                <textarea asp-for="PostTypes[i].DescriptionEn" class="form-control w-100"></textarea>
                <span asp-validation-for="PostTypes[i].DescriptionEn" class="text-danger"></span>
            </div>
            <hr />
        }
        <div class="form-group">
            <input type="submit" value="@Resource.Save" class="btn btn-primary" />
            <input type="submit" value="@Resource.Cancel" class="btn btn-light" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Map');
    </script>
}
