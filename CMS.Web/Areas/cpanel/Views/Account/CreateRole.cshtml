@model RoleViewModel
@{
    ViewData["Title"] = "إضافة دور";
    var IsEditMode = !(string.IsNullOrWhiteSpace(Model?.Id));
    PermissionViewModel[] Permissions = ViewBag.AllPermissions;
}
@section breadcrumb{
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">@Resource.Home</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Roles","Account")">الأدوار</a></li>
}
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <input asp-for="Id" type="hidden" />
            <h4>إضافة </h4>
            <hr />

            @await Html.PartialAsync("_AspValidationSummary")
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input autocomplete="off" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">حفظ</button>
        </form>
    </div>
</div>
